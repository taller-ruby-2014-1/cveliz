<h1><%= @post.title %></h1>


<h3><%= @post.text %></h3>
	


<%= link_to 'Back', posts_path %>
<%= link_to 'edit', edit_post_path(@post)%>

<br /><br />
<legend>Comentarios</legend>
<% @post.comments.each do |comment| %>
	<p>
		<strong><%= comment.commenter %>: </strong><%= comment.body %>
	</p>
	
	<p>
		<%= link_to 'Destroy Comment', [comment.post, comment], method: :delete, data: {confirm: 'Estas seguro?'}%>
	</p>	

<% end %>

<legend>Agregar un comentario</legend>
<%= form_for ([@post, @post.comments.build]) do |f| %>
	<p>
		<%= f.label :commenter %> <br />
		<%= f.text_field :commenter %>
	</p>

	<p>
		<%= f.label :body %> <br />
		<%= f.text_area :body %>
	</p>

	<p>
		<%= f.submit :class => "btn btn-default btn-lg" %>
	</p>

<% end %>

